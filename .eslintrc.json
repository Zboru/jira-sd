{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": "error",
        "consistent-return": "error",
        "class-methods-use-this": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
         ],
         "no-shadow": "off",
         "@typescript-eslint/no-shadow": ["error"]
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".ts", ".tsx"],
            "moduleDirectory": ["src", "node_modules"]
          }
        }
      }
}
